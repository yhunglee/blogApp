<div class="row">
    <div class="col-lg-8">
        <%= form_for @article, :url => { :controller => 'articles', :action => 'create' } do |f| %>
            <%= render :partial => 'form', :locals => { :f => f } %>
            <div class="article-operation row justify-content-end">
                <%= f.submit "Create", class: "btn btn-primary col-3 mr-3" %>
            </div>
        <% end %>
        <hr>
        <%= link_to 'Back to index', {:controller => 'articles', :action => 'index'}, class: "btn btn-link col-3" %>
    </div>
</div>