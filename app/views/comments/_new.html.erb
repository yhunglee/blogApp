<h5 class="card-header">
Leave a comment
</h5>
<div class="card-body">
    <%= form_for([@article, @comment]) do |f| %>
        <%= render :partial => "comments/form", :locals => {:f => f} %>
        <div class="row justify-content-end">
            <%= f.submit 'Create', class: "btn btn-primary col-3 mr-3" %>
        </div>
    <% end %>
</div>